# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_PATH=./data/okr-agent.db

# Claude API Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=8192
CLAUDE_TIMEOUT=30000

# CORS Configuration (comma-separated origins for production)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
JWT_SECRET=your_jwt_secret_here_make_it_long_and_secure
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL/TLS (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=

# Database Encryption (optional)
DB_ENCRYPTION_KEY=

# NeuroLeadership Feature Flags
# Master toggle - must be true to enable any NL features
ENABLE_NEUROLEADERSHIP=false

# Individual feature toggles (require ENABLE_NEUROLEADERSHIP=true)
ENABLE_ALTITUDE_TRACKING=false
ENABLE_MICRO_PHASES=false
ENABLE_HABIT_FORMATION=false
ENABLE_ARIA_LEARNING=false
ENABLE_LEARNING_ANALYTICS=false

# Gradual rollout percentage (0-100)
# Controls what percentage of users get NL features
NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=0

# A/B Testing
ENABLE_AB_TESTING=false
CONTROL_GROUP_PERCENTAGE=50

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# Rollout Schedule (for reference)
# Week 1: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=5   (Internal testing)
# Week 2: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=10  (Early adopters)
# Week 3: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=25  (Cautious expansion)
# Week 4: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=50  (Half rollout)
# Week 5: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=75  (Majority)
# Week 6: NEUROLEADERSHIP_ROLLOUT_PERCENTAGE=100 (Full rollout)